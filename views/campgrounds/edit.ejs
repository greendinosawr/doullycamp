<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edit Campground</h1>
    
    <div style="width: 30%; margin: 50px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <!--.form-control is the bootstrap comp that makes it look nice-->
                <!--.form-group makes gives each component some spacing-->
                <input class="form-control form-group" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>"></input>
                <input class="form-control form-group" type="number" min="0.00" step="0.01" name="campground[price]" value="<%= campground.price %>"></input>
                <input class="form-control form-group" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>"></input>
                <input class="form-control form-group" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>"></input>
                <div class="form-group">
                    <button class=" form-group btn btn-primary btn-lg btn-block">Submit</button>
                </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>